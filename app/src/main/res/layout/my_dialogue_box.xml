<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:background="@drawable/all_corner_grey"
        android:hint="0"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/baloo_regular"
        android:id="@+id/quantity"
        android:paddingStart="8dp"
        android:layout_margin="10dp"
        android:layout_height="40dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/quantity"
        android:layout_height="wrap_content">

        <com.ornach.nobobutton.NoboButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="0dp"
            android:paddingStart="5dp"
            app:nb_backgroundColor="#00BFA5"
            app:nb_focusColor="#00C853"
            app:nb_iconColor="@color/white"
            app:nb_radius="5dp"
            app:nb_text="      Add      "
            app:nb_textColor="#FFFFFF"
            app:nb_textSize="14sp" />

        <com.ornach.nobobutton.NoboButton
            android:id="@+id/cancel"
            android:layout_toLeftOf="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="0dp"
            android:paddingStart="5dp"
            app:nb_backgroundColor="#FA6357"
            app:nb_focusColor="#FFAB00"
            app:nb_iconColor="@color/white"
            app:nb_radius="5dp"
            app:nb_text="    Cancel    "
            app:nb_textColor="#FFFFFF"
            app:nb_textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>